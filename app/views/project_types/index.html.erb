<% content_for :head do %>
  <%= javascript_include_tag 'datatable' %>
<% end %>
<h1>Project Types</h1>

<table id="data-enhanced" class="display">
 <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
 </thead>

<% @project_types.each do |project_type| %>
  <tr>
    <td><%= project_type.name %></td>
    <td>
        <%= link_to 'Show', project_type %>
        <%= link_to 'Edit', edit_project_type_path(project_type) %>
        <%= link_to 'Destroy', project_type, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project type', new_project_type_path %>
