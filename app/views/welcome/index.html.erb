          <!--<%= label_tag :name %><%= text_field_tag :name, params[:name] %>-->
          <!--<%= label_tag :password %><%= password_field_tag :password %>-->
          <!--<%= submit_tag "Log In" %>-->
          <!--<% end %>-->
